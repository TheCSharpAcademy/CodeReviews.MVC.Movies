@using MoviesManager.DB

@model List<Movie>;


<div class="container">
  <div class="row pt-4">
    <div class="col-6"><h2 class="text-primary">Movies</h2></div>
    <div class="col-6 text-end">
      <a asp-controller="home" asp-action="create"  class="btn btn-primary rounded-2">
        <i class="bi bi-plus-circle-fill"></i> New
      </a>
    </div>
  </div>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      @foreach (var mov in Model)
      {
        <tr>
          <td>@mov.Title</td>
          <td>@mov.Price.ToString("C")</td>
          <td>
            <div class="btn-group" role="group">
              <a asp-action="delete" asp-route-id="@mov.Id" class="btn btn-danger mx-2 rounded-1">
                <i class="bi bi-trash3-fill"></i> Delete
              </a>
              <a asp-action="update" asp-route-id="@mov.Id" class="btn btn-primary mx-2 rounded-1">
                <i class="bi bi-pen"></i> Edit
              </a>
              <a asp-action="details" asp-route-id="@mov.Id" class="btn btn-primary mx-2 rounded-1">
                <i class="bi bi-eye"></i> Details
              </a>
            </div>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>
