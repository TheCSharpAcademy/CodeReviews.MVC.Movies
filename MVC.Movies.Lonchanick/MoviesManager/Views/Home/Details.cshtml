@using MoviesManager.DB;
@model Movie;

<div class="boder p-3 mb-4">
  <div class="row pb-2">
    <h2 class="text-primary">Create Movie</h2>
    <hr />
  </div>
  <div class="mb-3">

    <label asp-for="Title"></label>
    <input asp-for="Title" type="text" class="form-control" disabled/>
  </div>
