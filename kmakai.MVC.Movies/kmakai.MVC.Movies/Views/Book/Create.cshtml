@model kmakai.MVC.Movies.Models.Book

@{
    ViewBag.Title = "Add Book";
}


<h2>Add a book</h2>

<div class="form-horizontal">
    <hr />
    <form method="post">
        <div class="mb-3 row">
            <label class="control-label col-md-2" for="Title">Title</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Title" name="Title" type="text" value="" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label class="control-label col-md-2" for="Author">Author</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Author" name="Author" type="text" value="" />
            </div>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label class="control-label col-md-2" for="Publisher">Published</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Published" name="Published" type="date" value="" />
            </div>
            <span asp-validation-for="Published" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label class="control-label col-md-2" for="Genre">Genre</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Genre" name="Genre" type="text" value="" />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="control-label col-md-2" for="Price">Price</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Price" name="Price" type="text" value="" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>


        <div class="mt-4">
            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-controller="Book" asp-action="Index" class="btn btn-outline-success">back to list</a>
        </div>


    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}